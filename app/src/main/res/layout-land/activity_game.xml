<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="GameActivity">

    <ImageView
        android:id="@+id/random_image"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:contentDescription="@string/randomImage" />

    <LinearLayout
        android:id="@+id/preguntas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/random_image"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preguntas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/TextoIndice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="150dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/TextoPregunta"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextoIndice"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="150dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextoFormula"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextoPregunta"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="150dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/TextoFormula"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="73dp">

        <RadioButton
            android:id="@+id/SegundaOpcion"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/PrimeraOpcion"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="RadioButton" />

    </RadioGroup>

    <Button
        android:id="@+id/Send"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="450dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:text="@string/SEND" />


</RelativeLayout>